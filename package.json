{
  "scripts": {
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --runInBand --detectOpenHandles",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "archive:run": "node scripts/archive-messages.js",
    "archive:schedule": "node scripts/archive-scheduler.js"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.spec.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/frontend/"
    ],
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/frontend/",
      "<rootDir>/prisma-client-app/"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 70,
        "branches": 62,
        "functions": 65,
        "lines": 72
      }
    }
  },
  "devDependencies": {
    "@prisma/client": "^6.19.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "axios": "^1.13.2",
    "dotenv": "^17.2.3",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "prisma": "^6.19.0",
    "supertest": "^7.1.4"
  },
  "dependencies": {
    "flatpickr": "^4.6.13",
    "node-cron": "^3.0.3",
    "react-flatpickr": "^4.0.11",
    "react-router-dom": "^7.9.5"
  }
}
