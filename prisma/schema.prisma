generator client {
  provider = "prisma-client-js"
  output   = "../backend/node_modules/.prisma/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Car {
  id          Int     @id @default(autoincrement())
  make        String  // 2. (ADDED) Field for car make (e.g., "Toyota")
  model       String  // 3. (KEPT) Field for car model (e.g., "Camry")
  year        Int     // 4. (ADDED) Field for year
  pricePerDay Float   // 5. (FIXED) Renamed from 'price' to match controller
  image       String? // 6. (ADDED) Optional image URL

  // 7. (ADDED) Relation to the User who owns this car
  owner   User    @relation(fields: [ownerId], references: [id])
  ownerId Int

  bookings Booking[] // A car can have many bookings
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String

  // 8. (ADDED) A user can own many cars
  cars     Car[]
  
  // A user can make many bookings
  bookings Booking[]
}

model Booking {
  id        Int      @id @default(autoincrement())
  
  // 9. (FIXED) These are required for your calendar logic
  startDate DateTime
  endDate   DateTime
  
  createdAt DateTime @default(now()) // Kept this to see when it was booked

  car   Car @relation(fields: [carId], references: [id])
  carId Int

  user   User @relation(fields: [userId], references: [id])
  userId Int

  @@index([carId])
  @@index([userId])
}